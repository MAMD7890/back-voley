# ========================
# DATABASE CONFIGURATION
# ========================
spring.datasource.url=jdbc:mysql://localhost:3306/galacticos_app
spring.datasource.username=root
spring.datasource.password=root
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=false
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MySQL8Dialect

# ========================
# SERVER CONFIGURATION
# ========================
server.port=8080
spring.application.name=galacticos-app

# ========================
# TWILIO WHATSAPP CONFIGURATION
# ========================
# Credenciales de Twilio (obtener desde https://console.twilio.com)
# NOTA: Usa variables de entorno en producción
twilio.account-sid=${TWILIO_ACCOUNT_SID:ACxxxxxxxxxxxxxxxxxxxxxxxxxx}
twilio.auth-token=${TWILIO_AUTH_TOKEN:xxxxxxxxxxxxxxxxxxxxxxxxxxxx}
# Número de WhatsApp de Twilio (sandbox: +14155238886)
twilio.whatsapp-from=${TWILIO_WHATSAPP_FROM:whatsapp:+14155238886}
# Habilitar/deshabilitar el servicio de Twilio
twilio.enabled=true

# ========================
# WOMPI PAYMENT CONFIGURATION
# ========================
wompi.public-key=${WOMPI_PUBLIC_KEY:pub_xxxxxxxxxxxxxxxxxxxxxxxxxxxx}
wompi.private-key=${WOMPI_PRIVATE_KEY:priv_xxxxxxxxxxxxxxxxxxxxxxxxxxxx}
wompi.api-url=https://api.wompi.co/v1
wompi.sandbox-url=https://sandbox.wompi.co/v1

# ========================
# JWT SECURITY CONFIGURATION
# ========================
app.jwtSecret=${JWT_SECRET:your-secret-key-change-in-production}
app.jwtExpiration=86400000

# ========================
# LOGGING CONFIGURATION
# ========================
logging.level.root=INFO
logging.level.galacticos_app_back=DEBUG
